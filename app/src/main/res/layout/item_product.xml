<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="188dp"
        android:layout_height="290dp"
        android:scaleType="centerCrop"
        android:src="@drawable/card2"
        android:layout_margin="8dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Discount Percent -->
        <TextView
            android:id="@+id/discount_percent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#419145"
            android:text=" ↓ 20%"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:textStyle="bold"/>

        <!-- Original Price -->
        <TextView
            android:id="@+id/original_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70"
            android:background="@drawable/strikethrough"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="4dp"
            android:textSize="18sp"/>

        <!-- Current Price -->
        <TextView
            android:id="@+id/current_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ₹56"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <!-- Star Rating Image -->
        <ImageView
            android:id="@+id/star_rating_image"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/star_rating"
            android:layout_margin="8dp"/>
        <!-- Number of Customers Rated -->
        <TextView
            android:id="@+id/number_of_customers_rated_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="(1809)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="8dp"/>



    </LinearLayout>





</LinearLayout>